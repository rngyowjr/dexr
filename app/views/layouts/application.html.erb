<!DOCTYPE html>
<html>
  <head>
    <title>Dexr</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <script src="https://kit.fontawesome.com/b54a8ad828.js" crossorigin="anonymous" ></script>
    <script type="text/javascript">
      window.images = {
        eevee: "<%= image_url('eevee.png') %>",
        loginicon: "<%= image_url('pokeball.jpg') %>",
      }
    </script>
  
    <% if current_user %>
      <script>
        window.currentUser = {
          "id": <%= current_user.id%>,
          "username": "<%= current_user.username%>"
        };
      </script>
    <% end %> 
    
  </head>

  <body>
    <%= yield %>
  </body>
</html>
